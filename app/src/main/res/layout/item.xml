<?xml version="1.0" encoding="utf-8"?>

<!-- reservation list에 들어갈 lists -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textHour1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="start hour"
            android:textSize="30dp"
            android:fontFamily="@font/sdmisaeng"/>

        <TextView
            android:id="@+id/textMin1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="start min"
            android:textSize="30dp"
            android:fontFamily="@font/sdmisaeng"/>

        <TextView
            android:id="@+id/textHour2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="end hour"
            android:textSize="30dp"
            android:fontFamily="@font/sdmisaeng"/>

        <TextView
            android:id="@+id/textMin2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="end min"
            android:textSize="30dp"
            android:fontFamily="@font/sdmisaeng"/>

    </LinearLayout>
</LinearLayout>
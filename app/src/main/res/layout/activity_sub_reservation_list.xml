<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".SubActivity_reservationList">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewCheckbox"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="예약설정"
                    android:textSize="30dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"/>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check" />

        </LinearLayout>    <!-- 체크박스 레이아웃 end -->

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp">

                <TextView
                    android:id="@+id/daynight1"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="오전"
                    android:textSize="40dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"/>

                <TextView
                    android:id="@+id/hour1"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:textSize="50dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:gravity="center_vertical"
                    android:textAlignment="center"/>
n
                <TextView
                    android:id="@+id/char1"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="70dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:gravity="center_vertical"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/min1"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:textSize="50dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:gravity="center_vertical"
                    android:textAlignment="center"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp">

                <TextView
                    android:id="@+id/daynight2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="오전"
                    android:textSize="40dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/hour2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:textSize="50dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:gravity="center_vertical"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/char2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="70dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:gravity="center_vertical"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/min2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:textSize="50dp"
                    android:textColor="#3c3c3c"
                    android:fontFamily="@font/sdmisaeng"
                    android:gravity="center_vertical"
                    android:textAlignment="center"/>


        </LinearLayout>

        <Button
            android:id="@+id/addButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="reservationOnClick"
            android:text="+"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/add_button"
            style="@style/button_style"
            android:fontFamily="@font/sdmisaeng"/>

</LinearLayout>